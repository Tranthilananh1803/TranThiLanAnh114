@model IEnumerable<TranThiLanAnh114.Models.UniversityTTLA114>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Thêm trường</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UniversityName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UniversityName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UniversityID">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.UniversityID">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.UniversityID">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
